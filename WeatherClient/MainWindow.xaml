<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WeatherClient" x:Class="WeatherClient.MainWindow"
        Title="WeatherClient" Height="350" Width="525">
    <Grid Margin="0,0,1,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="258*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="197*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="CityName" HorizontalAlignment="Left" Height="23" Margin="31,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="3"/>
        <Button x:Name="GetWeatherButton" Visibility="Visible" Content="GetWeather" HorizontalAlignment="Left" Margin="145,66,0,0" VerticalAlignment="Top" Width="75" Click="GetWeatherButton_Click" Grid.Column="2" Height="22" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="CurrenWeatherDataGrid" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Height="52" Width="495" SelectionChanged="DataGrid_SelectionChanged" Grid.ColumnSpan="4"
                  Grid.Column="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Temperature" HeaderStringFormat="Temperature" IsReadOnly="False" Binding="{Binding ResultForecust.CurrentWeather.Temperature, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
                <DataGridTextColumn Header="Humidity" Binding="{Binding ResultForecust.CurrentWeather.Humidity, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
                <DataGridTextColumn Header="Pressure"/>
                <DataGridTextColumn Header="WindSpeed"/>
                <DataGridTextColumn Header="Clouds"/>
                <DataGridTextColumn Header="Precipitation mode"/>
                <DataGridTextColumn Header="Updated:"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="WeatherForeCustDataGrid" HorizontalAlignment="Left" Margin="10,183,0,0" VerticalAlignment="Top" Height="127" Width="495" Grid.ColumnSpan="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Temperature" Binding="{Binding ResultForecust.Forecast/Temperature, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
                <DataGridTextColumn Header="Humidity" Binding="{Binding ResultForecust.Forecast/Humidity, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
                <DataGridTextColumn Header="Pressure" Binding="{Binding ResultForecust.Forecast/Precipitation.Type, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
                <DataGridTextColumn Header="WindSpeed" Binding="{Binding ResultForecust.Forecast/WindSpeed, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
                <DataGridTextColumn Header="Clouds" Binding="{Binding ResultForecust.Forecast/CloudsValue, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
                <DataGridTextColumn Header="Precipitation mode" Binding="{Binding ResultForecust.Forecast/Precipitation.Type, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
                <DataGridTextColumn Header="Updated:" Binding="{Binding ResultForecust.CurrentWeather.Data.From.Date, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
