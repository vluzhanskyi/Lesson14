<Window x:Class="WeatherClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WeatherClient" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="314*"/>
            <ColumnDefinition Width="203*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="CityName" HorizontalAlignment="Left" Height="23" Margin="31,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2"/>
        <Button x:Name="GetWeatherButton" Content="GetWeather" HorizontalAlignment="Left" Margin="100,65,0,0" VerticalAlignment="Top" Width="75" Click="GetWeatherButton_Click" Grid.Column="1"/>
        <DataGrid x:Name="CurrenWeatherDataGrid" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Height="52" Width="497" Grid.ColumnSpan="2" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Temperature" HeaderStringFormat="Temperature" IsReadOnly="False"/>
                <DataGridTextColumn Header="Humidity"/>
                <DataGridTextColumn Header="Pressure"/>
                <DataGridTextColumn Header="WindSpeed"/>
                <DataGridTextColumn Header="Clouds"/>
                <DataGridTextColumn Header="Precipitation mode"/>
                <DataGridTextColumn Header="Updated:"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="WeatherForeCustDataGrid" HorizontalAlignment="Left" Margin="10,183,0,0" VerticalAlignment="Top" Height="52" Width="497" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Temperature"/>
                <DataGridTextColumn Header="Humidity"/>
                <DataGridTextColumn Header="Pressure"/>
                <DataGridTextColumn Header="WindSpeed"/>
                <DataGridTextColumn Header="Clouds"/>
                <DataGridTextColumn Header="Precipitation mode"/>
                <DataGridTextColumn Header="Updated:"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
